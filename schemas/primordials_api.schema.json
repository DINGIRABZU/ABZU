{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Primordials API Metrics",
  "type": "object",
  "properties": {
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "value": {"type": "number"}
        },
        "required": ["name", "value"]
      }
    }
  },
  "required": ["metrics"]
}
