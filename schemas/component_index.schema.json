{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component Index",
  "type": "object",
  "required": ["components"],
  "properties": {
    "$schema": {"type": "string"},
    "system_version": {"type": "string"},
    "index_version": {"type": "integer"},
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "chakra", "type", "version", "ignition_stage", "status", "adr"],
        "properties": {
          "id": {"type": "string"},
          "chakra": {"type": "string"},
          "type": {"type": "string"},
          "version": {"type": "string"},
          "ignition_stage": {"type": "integer"},
          "path": {"type": "string"},
          "purpose": {"type": "string"},
          "dependencies": {
            "type": "array",
            "items": {"type": "string"}
          },
          "tests": {
            "type": "array",
            "items": {"type": "string"}
          },
          "memory_layers": {
            "type": "array",
            "items": {"type": "string"}
          },
          "status": {
            "type": "string",
            "enum": ["active", "deprecated", "experimental"]
          },
          "adr": {
            "type": ["string", "null"]
          },
          "metrics": {
            "type": "object",
            "properties": {
              "coverage": {"type": "number"}
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
